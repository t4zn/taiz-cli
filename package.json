{
  "name": "taiz",
  "version": "1.0.0",
  "description": "A polyglot package manager for developers",
  "main": "src/cli.js",
  "bin": {
    "taiz": "./bin/taiz.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node bin/taiz.js",
    "build": "pkg . --targets node18-win-x64 --output dist/taiz.exe",
    "build-all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist/",
    "build-zip": "npm run build && npm run create-zip",
    "create-zip": "node scripts/create-zip.js",
    "calculate-hash": "node scripts/calculate-hash.js",
    "prepare-winget": "npm run build && node scripts/prepare-winget.js",
    "prepare-homebrew": "node scripts/prepare-homebrew.js",
    "setup-github": "node scripts/setup-github-info.js",
    "prepare-release": "npm run build-all && npm run prepare-winget && npm run prepare-homebrew && npm run create-zip && npm run calculate-hash",
    "publish-setup": "npm run setup-github && npm run prepare-release"
  },
  "keywords": ["package-manager", "polyglot", "cli", "node", "python"],
  "author": "Taiz Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "yaml": "^2.3.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.0",
    "semver": "^7.5.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t4zn/taiz-cli.git"
  },
  "homepage": "https://github.com/t4zn/taiz-cli#readme",
  "bugs": {
    "url": "https://github.com/t4zn/taiz-cli/issues"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js"
    ],
    "assets": [
      "examples/**/*"
    ],
    "outputPath": "dist"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}